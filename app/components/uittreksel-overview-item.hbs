{{#if @besluit.id}}
  <div
    class="info-tile u-background--gray-lightest"
    typeof="besluit:Besluit"
    resource={{@besluit.uri}}
  >
    <div class="info-tile__header__wrapper">
      <div class="grid">
        <div class="col--8-12">
          {{!-- TODO add RDFa volgendUitBehandelingVanAgendapunt.onderwerp.zitting when RDFa helpers support inverse relations --}}
          <h2 class="info-tile__header__title u-spacer--tinier" property="eli:title">
            {{clean-spaces @besluit.titel}}
          </h2>
          {{#if @besluit.beschrijving}}
            <p class="info-tile__header__subtitle" property="eli:description">
              {{clean-spaces @besluit.beschrijving}}
            </p>
          {{else}}
            <p class="info-tile__header__subtitle text-fade">Korte beschrijving niet gevonden</p>
          {{/if}}
          {{#unless @uittreksel.inhoud}}
            <p class="smallest text-fade uppercase u-spacer--top--tiny">Volledige inhoud niet publiek</p>
          {{/unless}}
        </div>
        <div class="col--4-12 u-align-right u-padding--right--small">
          {{#if @uittreksel.inhoud}}
            <LinkTo @route="bestuurseenheid.zitting.uittreksels.detail" @model={{@uittreksel.id}} property="lblodBesluit:linkToPublication" class="button button--alt button--alt--blue button--narrow button--small">
              Bekijk volledige inhoud <i class="vi vi-arrow vi-u-s button__icon"></i>
            </LinkTo>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
{{else if @uittreksel.inhoud}}
  <div class="info-tile {{unless @uittreksel "u-background--gray-lightest"}}">
    <div class="info-tile__header__wrapper">
      <div class="grid">
        <div class="col--8-12 vrije-tekst">
          {{html-safe @uittreksel.inhoud}}
          <p class="info-tile__header__subtitle text-fade">Geen korte beschrijving.</p>
        </div>
        <div class="col--4-12 u-align-right u-padding--right--small">
          {{#if @uittreksel.inhoud}}
            <LinkTo @route="bestuurseenheid.zitting.uittreksels.detail" @model={{@uittreksel.id}} property="lblodBesluit:linkToPublication" class="button button--alt button--alt--blue button--narrow button--small">
              Bekijk volledige inhoud <i class="vi vi-arrow vi-u-s button__icon"></i>
            </LinkTo>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
{{/if}}
