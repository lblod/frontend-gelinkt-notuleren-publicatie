{{#each this.besluiten as |besluit|}}
  <div class="col--12-12">
    <BesluitOverviewItem @besluit={{besluit}} />
  </div>
{{/each}}
{{#if this.fetchBesluiten.isRunning}}
  <div class="col--12-12">
    <AuLoader />
  </div>
{{/if}}
{{#if this.nextPage}}
  <div class="col--12-12">
    <AuButton @size="large" {{on "click" (perform this.fetchBesluiten this.nextPage)}}>
      meer laden
    </AuButton>
  </div>
{{/if}}

