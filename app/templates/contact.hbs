<section class="au-o-region-large">
  <div class="au-o-layout">
    <AuHeading class="au-u-margin-bottom">Contact</AuHeading>
    <form class="au-c-form js-formvalidation-bound">
      <AuLabel for="select">Waar gaat uw bericht over?</AuLabel>
      <ul>
        <li>
          <AuControlRadio @label="Een functionaliteit, bug of probleem" @value="GelinktNotuleren@vlaanderen.be?subject=Functionaliteit of bug of probleem" @name="type-vraag" @onChange={{fn (mut this.mailto)}} />
        </li>
        <li>
          <AuControlRadio @label="Een inhoudelijke vraag" @name="type-vraag" @value="GelinktNotuleren@vlaanderen.be?subject=Inhoudelijke vraag" @onChange={{fn (mut this.mailto)}} />
        </li>
      </ul>

      {{#if this.mailto}}
        <a href={{concat "mailto:" this.mailto}} class="au-c-button">Bericht versturen</a>
      {{else}}
        <AuButton @disabled="true">Bericht versturen</AuButton>
      {{/if}}
    </form>
    <AuContent class="au-u-margin-top-small">
      <p>
        Of neem rechtstreeks contact op via mail <a href="mailto:gelinktnotuleren@vlaanderen.be" class="au-c-link">GelinktNotuleren@vlaanderen.be</a>.
      </p>
    </AuContent>
  </div>
</section>
<Footer/>