<AuContentHeader @titlePartOne="Publicaties" @titlePartTwo="Gelinkt Notuleren" @pictureSize="large">
  <img
    sizes="100vw"
    src="/assets/images/banner-bruges.jpg"
    srcset="/assets/images/banner-bruges-320.jpg 320w, /assets/images/banner-bruges-1024.jpg 1024w, /assets/images/banner-bruges-1600.jpg 1600w" alt="Foto van Brugge.">
</AuContentHeader>

<div class="u-padding--round--large">
  <h2 class="h3 u-spacer">Zoek naar gepubliceerde agenda's, besluiten en notulen van een bestuur</h2>
  <ul class="steps steps--has-line">
    <li class="step step--no-box">
      <div class="step__icon">1</div>
      <div class="step__wrapper">
        <div class="step__header">
          <h3 class="step__title">Stap 1: Kies het type bestuurseenheid</h3>
        </div>
        <div class="step__content-wrapper">
          <div class="step__content">
            <SelectBestuurseenheidClassificatieLabel @model={{this.model}} @selected={{this.bestuurseenheidClassificatie}} @onSelect={{this.setBestuurseenheidClassificatie}} />
          </div>
        </div>
      </div>
    </li>
    <li class="step {{unless this.bestuurseenheidClassificatie "step--disabled"}} step--no-box">
      <div class="step__icon">2</div>
      <div class="step__wrapper">
        <div class="step__header">
          <h3 class="step__title">Stap 2: Kies de bestuurseenheid </h3>
        </div>
        <div class="step__content-wrapper">
          <div class="step__content">
            {{#if this.bestuurseenheidClassificatie}}
              <SelectBestuurseenheidNaam @bestuurseenheidClassificatie={{this.bestuurseenheidClassificatie}} @selected={{this.bestuurseenheidNaam}} @onSelect={{fn (mut this.bestuurseenheidNaam)}} />
            {{/if}}
            {{#if this.bestuurseenheidNaam}}
              <div class="button-group">
                <LinkTo @route="bestuurseenheid" @models={{array this.bestuurseenheidNaam this.bestuurseenheidClassificatie.label}}>
                  <button class="button button--large" type="button">Zoek publicaties</button>
                </LinkTo>
              </div>
            {{/if}}
          </div>
        </div>
      </div>
    </li>
  </ul>
</div>
